. config/options $1

cd $PKG_BUILD

ABS_PKG_BUILD=`pwd`
cd "../image/system"
SYSTEMDIR=`pwd`
echo "System dir:"
echo $SYSTEMDIR
cd $ABS_PKG_BUILD


./configure  \
            --prefix=$SYSTEMDIR \
            --host=$TARGET_NAME \
            --build=$HOST_NAME 

#the build fails, but it gets far enough for expr which is all we need
echo "Sit tight... this is a huge hack"
bash -c "make;echo 'Hack complete'"

